{% extends "LeBonCoinBundle::layout.html.twig" %}

{% block title %}Les annonces{% endblock %}

{% block body %}
<div class="col-md-offset-1 col-md-10">
    <h1>Liste des annonces</h1>
    {% for advert in adverts %}
        <div class="col-md-offset-1 col-md-10" style="margin-bottom: 20px">
            <a href="{{ path('leboncoin_show_advert', {'id': advert.id}) }}">
                {% for image in advert.images %}
                    <img src="{{ asset(image.getUploadDir ~ '/' ~ image.url) }}" alt="image.url" class="col-md-3">
                {% endfor %}
                <div class="col-md-7">
                    <h4>{{ advert.name }}</h4>
                    <p>{{ advert.description }}</p>
                </div>
            </a>
        </div>
    {% endfor %}
</div>
{% endblock %}
