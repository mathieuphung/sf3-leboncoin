{% extends "LeBonCoinBundle::layout.html.twig" %}

{% block title %}{{ advert.name }}{% endblock %}

{% block body %}
    <div class="col-md-offset-1 col-md-10">
        <h1>Annonces</h1>
        <div class="col-md-offset-1 col-md-10" style="margin-bottom: 20px">
            <h2>{{ advert.name }}</h2>
            <p>Créée le <i>{{ day }}</i> à <i>{{ time }}</i></p>
            {% if advert.images|length > 0 %}
            <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    {% for image in advert.images %}
                        <div class="item {% if loop.first %}active{% endif %}" style="max">
                            <img src="{{ asset(image.getUploadDir ~ '/' ~ image.url) }}" alt="{{ image.url }}" class="col-md-offset-3 col-md-6">
                        </div>
                    {% endfor %}
                </div>

                <!-- Controls -->
                <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                </a>
                <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                </a>
            </div> <!-- Carousel -->
            {% else %}
                <div class="text-center">
                    <p>Aucune image</p>
                </div>
            {% endif %}
            <div class="col-md-12">
                <p>{{ advert.description }}</p>
                <p>
                    <strong>Auteur : </strong> {{ advert.author }}<br>
                    {% if advert.email is defined %}
                        <strong>Email : </strong> {{ advert.email }}<br>
                    {% endif %}
                    {% if advert.telephoneNumber is defined %}
                        <strong>Téléphone : </strong> 0{{ advert.telephoneNumber }}<br>
                    {% endif %}
                </p>
            </div>
        </div>
    </div>
{% endblock %}